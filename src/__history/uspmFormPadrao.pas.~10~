unit uspmFormPadrao;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.ComCtrls, Vcl.ExtCtrls,
  JvExControls, JvButton, JvTransparentButton, System.Actions, Vcl.ActnList,
  Vcl.ImgList;

type
  TspmFormPadrao = class(TForm)
    pnBotoes: TPanel;
    sbFormPadrao: TStatusBar;
    btSair: TJvTransparentButton;
    imFormPadrao32: TImageList;
    alFormPadrao: TActionList;
    acSair: TAction;
    pnFormPadrao: TPanel;
    procedure acSairExecute(Sender: TObject);
    procedure FormClose(Sender: TObject; var Action: TCloseAction);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  spmFormPadrao: TspmFormPadrao;

implementation

{$R *.dfm}

procedure TspmFormPadrao.FormClose(Sender: TObject; var Action: TCloseAction);
begin
  try
    try
      Action := caFree;
    except
      on E : Exception do
      begin
        Raise Exception.Create(E.Message);
      end;
    end;
  finally

  end;
end;

procedure TspmFormPadrao.acSairExecute(Sender: TObject);
begin
  try
    try
      Self.Close;
    except
      on E : Exception do
      begin
        Raise Exception.Create(E.Message);
      end;
    end;
  finally

  end;
end;

end.
